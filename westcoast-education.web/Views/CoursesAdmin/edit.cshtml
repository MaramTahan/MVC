@model westcoast_education.web.ViewModels.CourseUpdateViewModel
@{
    Layout = "_LayoutAdmin";
}


 <div class="page">
  <h1>Update Course.Nr @Model.courseNumber</h1>
  <br>
    <form class="shadow" asp-action="Edit" asp-controller="CoursesAdmin" asp-route-Id=@Model.Id method="post">
        <div class="form-control">
            <label asp-for="courseNumber">Course.Nu</label>
            <input asp-for="courseNumber"/>
        </div>
        <div class="form-control">
            <label asp-for="name">CourseName</label>
            <input asp-for="name"/>
        </div>
        <div class="form-control">
            <label asp-for="startDate">StartDate</label>
            <input asp-for="startDate "/>
        </div>
        <div class="form-control">
            <label asp-for="endDate">EndDate</label>
            <input asp-for="endDate"/>
        </div>
        <div class="form-control">
            <label asp-for="teacher">Teacher</label>
            <input asp-for="teacher"/>
        </div>
        <div class="form-control">
            <label asp-for="placeStudy">PlaceStudy</label>
            <input asp-for="placeStudy"/>
        </div>

        <div class="form-control">
            <div class="buttons-container">
                <button type="Submit" class="btn-save"><i class="fa-sharp fa-solid fa-floppy-disk"></i>
                    Save</button>
                <a asp-action="Index" asp-controller="CoursesAdmin" class="btn-warning"><i
                        class="fa-solid fa-arrow-left"></i> Cancel</a>
            </div>
        </div>
    </form>

 </div>