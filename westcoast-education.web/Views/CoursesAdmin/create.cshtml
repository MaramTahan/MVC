@{
    Layout = "_LayoutAdmin";
}
@model westcoast_education.web.ViewModels.CoursePostViewModel

 <div class="page">
  <h1>Add Course</h1>
    <form class="shadow" asp-action="create" asp-controller="CoursesAdmin" method="post">
        <div class="form-control">
            <label for="">Course.nr</label>
            <input>
        </div>
        <div class="form-control">
            <label for="">Course</label>
            <input>
        </div>
        <div class="form-control">
            <label for="">startDate </label>
            <input>
        </div>
        <div class="form-control">
            <label for="">endDate</label>
            <input>
        </div>
        <div class="form-control">
            <label for="">teacher </label>
            <input>
        </div>
        <div class="form-control">
            <label for="">placeStudy </label>
            <input>
        </div>

        <div class="form-control">
            <div class="buttons-container">
                <button type="Submit" class="btn-save"><i class="fa-sharp fa-solid fa-floppy-disk"></i>
                    Save</button>
                <a asp-action="index" asp-controller="CoursesAdmin" class="btn-warning"><i
                        class="fa-solid fa-arrow-left"></i> Cancel</a>
            </div>
        </div>
    </form>

 </div>