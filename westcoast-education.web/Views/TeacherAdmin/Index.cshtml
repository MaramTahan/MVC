@model IList<westcoast_education.web.ViewModels.Users.TeacherListViewModel>
@{
 Layout = "_LayoutAdmin";
}

<div class="page">
      <h1>Teachers List</h1>
      <br>
      
      <div class="table-container">
         <div>
            <a class="btn-add" asp-action="Create" asp-controller="TeacherAdmin">Add Teacher<i class="fa-solid fa-plus"></i></a>
        </div>
      <table>
         <thead>
            <tr>
               <th></th>
               <th>UserId</th>
               <th>FirstName</th>
               <th>LastName</th>
               <th>E-post</th>
               <th>Phone.Nr</th>
               <th>Address</th>
               <th>CoursesTaught</th>
               <th></th>
            </tr>
         </thead>
         <tbody>
            @foreach (var user in Model){
               <tr>
                  <td class="edit-icon">
                     <a asp-action="Edit" asp-controller="TeacherAdmin" asp-route-userId=@user.userId><i class="fa-solid fa-pen"></i></a>
                  </td>
                  <td>@user.userId</td>
                  <td>@user.firstName </td>
                  <td>@user.lastName</td>
                  <td>@user.email</td>
                  <td>@user.phoneNumber</td>
                  <td>@user.address</td>
                  <td>@user.coursesTaught</td>
                  
                  <td class="delete-icon"><a asp-action="Delete" asp-controller="TeacherAdmin" asp-route-userId=@user.userId><i class="fa-solid fa-trash"></i></a>
                  </td>
               </tr>
            }
         </tbody>
         <tfoot>
            <tr>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
            </tr>
         </tfoot>
      </table>
   </div>

   
   </div>