@{
 Layout = "_LayoutAdmin";
}
@model IList<westcoast_education.web.ViewModels.Users.UsersListViewModel>
<div class="page">
      <h1>Courses Available</h1>
      <div class="table-container">
         <div>
            <a class="btn-add" asp-action="create" asp-controller="UserAdmin">Add Course<i class="fa-solid fa-plus"></i></a>
        </div>
      <table>
         <thead>
            <tr>
               <th></th>
               <th>UserName</th>
               <th>FirstName</th>
               <th>LastName</th>
               <th>E-post</th>
               <th></th>
            </tr>
         </thead>
         <tbody>
            @foreach (var user in Model){
               <tr>
                  <td class="edit-icon">
                     <a asp-action="Edit" asp-controller="UserAdmin"><i class="fa-solid fa-pen"></i></a>
                  </td>
                  <td>@user.userName</td>
                  <td>@user.firstName</td>
                  <td>@user.lastName</td>
                  <td>@user.email</td>
                  <td class="delete-icon"><a asp-action="Delete" asp-controller="UserAdmin"><i class="fa-solid fa-trash"></i></a>
                  </td>
               </tr>
            }
         </tbody>
         <tfoot>
            <tr>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
                     <td>&nbsp;</td>
            </tr>
         </tfoot>
      </table>
   </div>

   
   </div>