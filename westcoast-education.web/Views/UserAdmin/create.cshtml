@{
 Layout = "_LayoutAdmin";
}
@model westcoast_education.web.ViewModels.Users.UserPostViewModel

<div class="page">
  <h1>Add User</h1>
    <form class="shadow" asp-action="create" asp-controller="UserAdmin" method="post">
        <div class="form-control">
            <label for="">UserName</label>
            <input>
        </div>
        <div class="form-control">
            <label for="">FirstName</label>
            <input>
        </div>
        <div class="form-control">
            <label for="">LastName </label>
            <input>
        </div>
        <div class="form-control">
            <label for="">Email</label>
            <input>
        </div>
        <div class="form-control">
            <label for="">Password </label>
            <input>
        </div>

        <div class="form-control">
            <div class="buttons-container">
                <button type="Submit" class="btn-save"><i class="fa-sharp fa-solid fa-floppy-disk"></i>
                    Spara</button>
                <a asp-action="index" asp-controller="UserAdmin" class="btn-warning"><i
                        class="fa-solid fa-arrow-left"></i> Cancel</a>
            </div>
        </div>
    </form>

 </div>